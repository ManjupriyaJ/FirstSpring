<?xml version="1.0" encoding="UTF-8"?>  
<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
   xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">   

<bean id="forumMap" class="com.ntrs.test.QuestionCIMap">  
<!-- If you don't specify the <constructor-arg type="">, By default it will consider it as String
 and call the String parameter type constructor. To refer to other primitive parameter types, 
 U should give it in 'type' parameter -->
<constructor-arg value="111" type="int"></constructor-arg>
<constructor-arg value="What is Java?"></constructor-arg>
<constructor-arg>
<map>
<entry key="Java is a programming language" value="1"></entry>
<entry key="Java is a Platform" value="2"></entry>
<entry key="Java is an Island of Indonasia" value="3"></entry>
</map>
</constructor-arg> 
</bean> 
  
</beans>  